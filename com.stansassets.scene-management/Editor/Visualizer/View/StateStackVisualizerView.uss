.root {
    margin: 5px 10px 0 0;
    padding: 3px;
    border-radius: 3px;
}

.stack-title {
    padding: 3px 0 10px 0;
    font-size: 15px;
    -unity-font-style: bold;
}

.stack-container {
    flex-direction: row;
}

.stack-content {
    flex-direction: column;
    flex-grow: 0;
}

.stack-item {
    padding: 5px;
    border-radius: 3px;
    border-width: 1px;
    margin: 1px 5px 1px 5px;
    flex-grow: 0;
    font-size: 15px;
    width: 25px;
    height: 25px;
    -unity-text-align: middle-center;
}

.stack-arrow {
    margin: auto 3px auto 3px;
    font-size: 25px;
}

.stack-progress-bar {
    margin: 5px;
}
